# Dockerfile para Backend Django
FROM python:3.9-slim

# Establecer variables de entorno
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV DEBIAN_FRONTEND=noninteractive

# Instalar dependencias del sistema necesarias para rasterio y GDAL
RUN apt-get update && apt-get install -y \
    gdal-bin \
    libgdal-dev \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Configurar variables de entorno para GDAL
ENV CPLUS_INCLUDE_PATH=/usr/include/gdal
ENV C_INCLUDE_PATH=/usr/include/gdal

# Establecer directorio de trabajo
WORKDIR /app

# Copiar archivo de requisitos
COPY requirements.txt .

# Instalar dependencias de Python
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copiar c칩digo de la aplicaci칩n
COPY . .

# Crear directorio para media files
RUN mkdir -p media/uploads

# Aplicar migraciones y recolectar archivos est치ticos
RUN python manage.py migrate --noinput || true
RUN python manage.py collectstatic --noinput || true

# Exponer puerto
EXPOSE 8000

# Comando para ejecutar la aplicaci칩n
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
