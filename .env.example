# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (opcional, por defecto usa SQLite)
# DATABASE_URL=postgresql://user:password@db:5432/imageanalyzer

# Machine Learning Paths (rutas dentro del contenedor)
ML_TRAIN_PATH=/training-data/train
ML_TEST_PATH=/training-data/test

# Frontend API URL (para desarrollo)
VITE_API_URL=http://backend:8000

# Docker Volume Paths (rutas en tu máquina local)
# Por defecto usa ~/Downloads/train y ~/Downloads/test
# Personaliza estas rutas según tu ambiente:
TRAIN_DATA_PATH=~/Downloads/train
TEST_DATA_PATH=~/Downloads/test

# Ejemplos para diferentes ambientes:
# Mac/Linux:
# TRAIN_DATA_PATH=/Users/tuusuario/datos/train
# TEST_DATA_PATH=/Users/tuusuario/datos/test

# Windows (WSL2):
# TRAIN_DATA_PATH=/mnt/c/Users/tuusuario/datos/train
# TEST_DATA_PATH=/mnt/c/Users/tuusuario/datos/test

# Servidor Linux:
# TRAIN_DATA_PATH=/opt/imageanalyzer/data/train
# TEST_DATA_PATH=/opt/imageanalyzer/data/test
